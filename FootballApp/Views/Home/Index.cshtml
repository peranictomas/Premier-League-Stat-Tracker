@using FootballApp.Models
@{
    ViewBag.Title = "Home Page";
}
    <head>
        <title>Home Page</title>
        <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
        <script src="~/Scripts/jquery-3.4.1.min.js"></script>
        <script src="~/Scripts/bootstrap.min.js"></script>
        <script src="~/Scripts/popper.min.js"></script>
    </head>

<div style="background:purple" class="jumbotron">
    <h1 style="color: white" class="text-center">Premier League Tracker</h1>
</div>

    <div class="col">
        <h2 class="text-center">Getting started</h2>
        <h3 class="text-center">Select a team a view their stats below!</h3>
    </div>
    <form class="row" action="TeamStats" method="post">
        <div class="col-4"></div>
        <div class="col-2">
            <input type="radio" name="TeamName" value="Liverpool"> Liverpool<br>
            <input type="radio" name="TeamName" value="Leicester"> Leicester<br>
            <input type="radio" name="TeamName" value="Manchester City"> Manchester City<br>
            <input type="radio" name="TeamName" value="Chelsea"> Chelsea<br>
            <input type="radio" name="TeamName" value="Manchester Utd"> Manchester Utd<br>
            <input type="radio" name="TeamName" value="Tottenham"> Tottenham<br>
            <input type="radio" name="TeamName" value="Wolves"> Wolves<br>
            <input type="radio" name="TeamName" value="Sheffield Utd"> Sheffield Utd<br>
            <input type="radio" name="TeamName" value="Crystal Palace"> Crystal Palace<br>
            <input type="radio" name="TeamName" value="Arsenal"> Arsenal<br>

        </div>
        <div class="col-2">
            <input type="radio" name="TeamName" value="Everton"> Everton<br>
            <input type="radio" name="TeamName" value="Southampton"> Southampton<br>
            <input type="radio" name="TeamName" value="Newcastle"> Newcastle<br>
            <input type="radio" name="TeamName" value="Brighton"> Brighton<br>
            <input type="radio" name="TeamName" value="Burnley"> Burnley<br>
            <input type="radio" name="TeamName" value="West Ham"> West Ham<br>
            <input type="radio" name="TeamName" value="Aston Villa"> Aston Villa<br>
            <input type="radio" name="TeamName" value="Bournemouth"> Bournemouth<br>
            <input type="radio" name="TeamName" value="Watford"> Watford<br>
            <input type="radio" name="TeamName" value="Norwich"> Norwich<br>
        </div>
        <div class="col-4"></div>
        <div class="col text-center">
            <input id="Submit" name="Submit" type="submit" value="Show Results" />
        </div>
    </form>
       